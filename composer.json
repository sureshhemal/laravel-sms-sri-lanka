{
    "name": "sureshhemal/laravel-sms-sri-lanka",
    "description": "A Laravel package for sending SMS through Sri Lankan providers (Hutch, with more providers coming soon)",
    "version": "1.0.3",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "laravel",
        "sms",
        "sri-lanka",
        "hutch",
        "notifications"
    ],
    "authors": [
        {
            "name": "Suresh Hemal",
            "email": "sureshhemal123@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "laravel/framework": "^10.0|^11.0",
        "illuminate/support": "^10.0|^11.0",
        "illuminate/notifications": "^10.0|^11.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "orchestra/testbench": "^8.0|^9.0",
        "mockery/mockery": "^1.6"
    },
    "autoload": {
        "psr-4": {
            "Sureshhemal\\SmsSriLanka\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Sureshhemal\\SmsSriLanka\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Sureshhemal\\SmsSriLanka\\Providers\\SmsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "test": "phpunit"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
} 